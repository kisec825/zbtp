{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://zbtp.org/schemas/project.schema.json",
  "title": "ZBTP Project",
  "description": "Canonical project definition agreed upon by participants.",
  "type": "object",
  "properties": {
    "name": {"type":"string","description":"Canonical project name (application-level)."},
    "version": {"type":"integer"},
    "description": {"type":"string"},
    "description_text": {"type":"string"},
    "description_hash": {"$ref": "./common.schema.json#/definitions/hex32"},
    "repo": {"type":"string","format":"uri","description":"Optional canonical project URL (e.g., repository)."},
    "owners": {
      "type":"array",
      "items": {"$ref": "./common.schema.json#/definitions/publicKey"},
      "minItems": 0,
      "description":"List of public keys considered owners/maintainers of the project definition."
    },
    "participants": {"type":"array","items":{"$ref":"./common.schema.json#/definitions/publicKey"}},
    "createdAt": {"$ref": "./common.schema.json#/definitions/timestamp"},
    "created_at": {"$ref": "./common.schema.json#/definitions/timestamp"},
    "random_salt": {"type":"string"},
    "external_link": {"type":"string","format":"uri"},
    "referenced_project_id": {"anyOf":[{"$ref": "./common.schema.json#/definitions/hex32"},{"type":"null"}]},
    "project_id": {"$ref": "./common.schema.json#/definitions/hex32"},
    "metadata": {"type":"object","additionalProperties": true},
    "hash": {"$ref": "./common.schema.json#/definitions/hex32","description":"SHA-256 hex of canonical project JSON (excluding 'hash')."},
    "signature": {
      "anyOf": [
        {"$ref": "./common.schema.json#/definitions/signature"},
        {"$ref": "./common.schema.json#/definitions/signatureHex"}
      ]
    }
  },
  "additionalProperties": true
}
